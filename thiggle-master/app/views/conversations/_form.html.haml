= flash[:notice] if flash[:notice]
= simple_form_for :conversation, url: :conversations,  :html => {:class => 'form-horizontal' } do |f|
  = f.input :recipients, label: 'To'
  </br>
  = f.input :subject
  </br>
  = f.input :body, as: :text, :input_html => { :cols => 50, :rows => 3 }
  .form-actions
    = f.button :submit, class: 'btn-primary', value: 'Send Message'
    = submit_tag 'Cancel', type: :reset, class: 'btn btn-danger'
