<div class="well well-small span3  pull-right">
<h4>Sign in</h4>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :login %>
  <%= f.text_field :login, :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    
  <% end -%>

  <div class = "rows"><%= f.submit "SIGN IN", :class => 'button-small purple_normal rounded3' %><div><%= f.check_box :remember_me %></div><div> <%=f.label :remember_me %></div></div>
<% end %>
<%= render "devise/shared/links" %>
